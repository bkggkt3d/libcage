CXXFLAGS += -Wall -O0 -DDEBUG -DDEBUG_NAT -g -fPIC
# ASFLAGS +=
LDFLAGS += -levent -lcrypto
# INCLUDES +=

if $(equal $(SYSNAME), Darwin)
	EXT_DLL = .dylib
	export

SRC[] =
	dgram
	dht
	cagetypes
	dtun
	peers
	rttable
	cage
	timer
	natdetector
	udphandler

LIBNAME = libcage

.PHONY: clean shared static install

shared: $(DynamicCXXLibrary $(LIBNAME), $(SRC))

static: $(StaticCXXLibrary $(LIBNAME), $(SRC))

clean:
	rm -f *~ *.a *.o *.so *.dylib


.DEFAULT: shared static
